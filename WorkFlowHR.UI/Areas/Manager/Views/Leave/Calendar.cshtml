@{
    ViewData["Title"] = "Leave Calendar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href='https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css' rel='stylesheet' />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src='https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js'></script>
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/locales/tr.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.3/js/bootstrap.min.js"></script>

<div class="main-navigation">
    <a href="@Url.Action("Index", "Leave")" class="main-nav-item">İzinler</a>
    <a href="#" class="main-nav-item">Raporlar</a>
    <a href="#" class="main-nav-item">Kurallar</a>
    <a href="#" class="main-nav-item">Onay Süreçleri</a>
    <a href="@Url.Action("Calendar", "Leave")" class="main-nav-item active">Takvim</a>
</div>

<div class="page-content">
    <div class="table-container-dynamic">
        <div id='calendar'></div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'tr',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                buttonText: { today: 'Bugün', month: 'Aylık', week: 'Haftalık', day: 'Günlük' },
                events: '@Url.Action("GetLeavesAsJson", "Leave", new { area = "Manager" })',
                eventDidMount: function(info) {
                    new bootstrap.Tooltip(info.el, { title: info.event.title, placement: 'top', trigger: 'hover', container: 'body' });
                }
            });
            calendar.render();
        });
    </script>
}

@section Styles {
    <style>
        :root {
            --primary-color: #0d6efd;
            --border-color: #dee2e6;
        }

        .main-navigation {
            display: flex;
            border-bottom: 1px solid var(--border-color);
            padding: 0 28px;
        }

        .main-nav-item {
            padding: 1rem 1rem;
            color: #6c757d;
            text-decoration: none;
            font-weight: 500;
            border-bottom: 3px solid transparent;
            margin-bottom: -1px;
        }

            .main-nav-item:hover {
                color: #212529;
            }

            .main-nav-item.active {
                color: var(--primary-color);
                border-bottom-color: var(--primary-color);
            }

        .page-content {
            padding: 24px 28px;
        }

        .table-container-dynamic {
            background: #fff;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 24px;
        }

        .fc-event {
            color: #fff !important;
            cursor: pointer;
            border: none !important;
        }
    </style>
}