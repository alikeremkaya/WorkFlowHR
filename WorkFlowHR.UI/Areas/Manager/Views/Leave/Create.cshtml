@model WorkFlowHR.UI.Areas.Manager.Models.LeaveVMs.LeaveCreateVM

@{
    ViewData["Title"] = "Create";

}




<div class="container mt-5">
    <h1 class="custom-page-title">Create New Leave</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form id="leaveCreateForm" asp-action="Create" class="custom-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row">
                    <label asp-for="StartDate" class="col-sm-3 col-form-label">Start Date</label>
                    <div class="col-sm-9">
                        <input asp-for="StartDate" type="date" class="form-control" required />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="EndDate" class="col-sm-3 col-form-label">End Date</label>
                    <div class="col-sm-9">
                        <input asp-for="EndDate" type="date" class="form-control" required />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="LeaveTypeId" class="col-sm-3 col-form-label">Leave Type</label>
                    <div class="col-sm-9">
                        <select asp-for="LeaveTypeId" asp-items="@Model.LeaveTypes" class="form-control" required>
                            <option value="">--- Select ---</option>
                        </select>
                        <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ManagerId" class="col-sm-3 col-form-label">Employees</label>
                    <div class="col-sm-9">
                        <select asp-for="ManagerId" asp-items="@Model.Managers" class="form-control" required>
                            <option value="">--- Select ---</option>
                        </select>
                        <span asp-validation-for="ManagerId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <div class="col-sm-9">
                        <button type="submit" class="btn custom-btn custom-btn-primary">Create</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container mt-3 text-center">
    <a asp-action="Index" class="btn custom-btn custom-btn-secondary">Back to List</a>
</div>

@section Scripts {

}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
<script>
    $(document).ready(function () {
        var endDateErrorMessage = 'End date must be later than start date.';
        $('#leaveCreateForm').on('submit', function (event) {
            var startDate = new Date($('#StartDate').val());
            var endDate = new Date($('#EndDate').val());

            var endDateInput = document.getElementById('EndDate');

            if (endDate <= startDate) {
                endDateInput.setCustomValidity(endDateErrorMessage);
                endDateInput.reportValidity();
                event.preventDefault(); // prevent form submission
            } else {
                // Clear the custom error if dates are valid
                endDateInput.setCustomValidity('');
            }
        });


        if (endDate <= now) {
            event.preventDefault();
            alert('End Date must be later than the current date and time');
            return;
        }

        // Clear custom validity when the date inputs are changed
        $('#StartDate, #EndDate').on('change', function () {
            var endDateInput = document.getElementById('EndDate');
            endDateInput.setCustomValidity('');
        });
    });
</script>


