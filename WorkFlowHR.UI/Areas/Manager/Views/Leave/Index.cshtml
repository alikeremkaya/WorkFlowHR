@model IEnumerable<WorkFlowHR.UI.Areas.Manager.Models.LeaveVMs.LeaveListVM>

@using WorkFlowHR.Domain.Enums

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- DataTables CSS ve JS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/plug-ins/1.13.4/i18n/Turkish.json"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<br />
<br />
<div class="header">
    <h1 class="page-title">Leaves</h1>
    <a href="javascript:void(0);" class="btn btn-create" onclick="openLeaveCreateModal()">Add</a>
</div>

<div class="table-responsive">
    <table id="leavesTable" class="table table-hover display nowrap" style="width:100%">
        <thead>
            <tr>
                <th style="background-color:#7978E9; color:white">EmployeeName</th>
                <th style="background-color:#7978E9; color:white">LeaveType</th>
                <th style="background-color:#7978E9; color:white">Roles</th>
                <th style="background-color:#7978E9; color:white">StartDate</th>
                <th style="background-color:#7978E9; color:white">EndDate</th>
                <th style="background-color:#7978E9; color:white">RequestStatus</th>
                <th style="background-color:#7978E9; color:white">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.AppUserDisplayName)</td>
                    <td>@Html.DisplayFor(modelItem => item.LeaveTypeName)</td>
                    <td>@Html.DisplayFor(modelItem => item.AppUserRole)</td>
                    <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                    <td>
                        @if (item.LeaveStatus == LeaveStatus.Pending)
                        {
                            <span class="badge badge-warning">Pending</span>
                        }
                        else if (item.LeaveStatus == LeaveStatus.Approved)
                        {
                            <span class="badge badge-success">Approved</span>
                        }
                        else if (item.LeaveStatus == LeaveStatus.Rejected)
                        {
                            <span class="badge badge-danger">Rejected</span>
                        }
                    </td>
                    <td>
                        @if (item.LeaveStatus == LeaveStatus.Pending)
                        {
                            <div class="dropdown table-dropdown">
                                <button class="btn btn-secondary dropdown-toggle table-dropdown-toggle" type="button" id="dropdownMenuButton@item.Id" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="caret"></span>
                                </button>
                                <div class="dropdown-menu dropdown-menu-right table-dropdown-menu" aria-labelledby="dropdownMenuButton@item.Id">
                                    <a class="dropdown-item dropdown-item-approve" href="@Url.Action("ApproveLeave", new { id = item.Id })">Approve</a>
                                    <a class="dropdown-item dropdown-item-reject" href="@Url.Action("RejectLeave", new { id = item.Id })">Reject</a>
                                    <a class="dropdown-item dropdown-item-update" href="javascript:void(0);" onclick="openLeaveUpdateModal('@item.Id')">Update</a>
                                    <a class="dropdown-item dropdown-item-delete" href="javascript:void(0);" data-id="@item.Id">Delete</a>
                                </div>
                            </div>
                        }
                        else if (item.LeaveStatus == LeaveStatus.Approved || item.LeaveStatus == LeaveStatus.Rejected)
                        {
                            <button class="btn btn-delete-direct" data-id="@item.Id">Delete</button>
                        }
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Leave Create Modal -->
<div id="leaveCreateModal" class="modal">
    <div class="modal-content" onclick="event.stopPropagation()">
        <span class="modal-close" onclick="closeLeaveModal('leaveCreateModal')">&times;</span>
        <div id="leaveCreateModalContent"></div>
    </div>
</div>

<!-- Leave Update Modal -->
<div id="leaveUpdateModal" class="modal">
    <div class="modal-content" onclick="event.stopPropagation()">
        <span class="modal-close" onclick="closeLeaveModal('leaveUpdateModal')">&times;</span>
        <div id="leaveUpdateModalContent"></div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#leavesTable').DataTable({
                "paging": true,
                "ordering": true,
                "info": true,
                "searching": true,
                language: {
                    lengthMenu: "Göster _MENU_ kayıt",
                    search: "Ara:",
                    paginate: {
                        next: "İleri",
                        previous: "Geri"
                    },
                    "info": "_START_ - _END_ arası gösteriliyor (toplam _TOTAL_ kayıt)",
                    "infoEmpty": "Tabloda veri yok",
                    "emptyTable": "Tabloda veri yok"
                }
            });
        });

        $('.btn-delete-direct, .dropdown-item-delete').click(function () {
            var id = $(this).data('id');
            swal({
                title: "Silme Onayı",
                text: "Bu kaydı silmek istediğinize emin misiniz?",
                icon: "warning",
                buttons: {
                    cancel: {
                        text: "Hayır",
                        visible: true,
                        className: "btn btn-secondary",
                        closeModal: true
                    },
                    confirm: {
                        text: "Evet",
                        className: "btn btn-danger",
                        closeModal: false
                    }
                }
            }).then((isConfirm) => {
                if (isConfirm) {
                    $.ajax({
                        url: '@Url.Action("Delete", "Leave", new { area = "Manager" })',
                        type: 'POST',
                        data: { id: id },
                        success: function (response) {
                            swal({
                                title: "Silindi",
                                text: "Kayıt başarıyla silindi.",
                                icon: "success"
                            }).then(() => {
                                location.reload();
                            });
                        },
                        error: function () {
                            swal("Hata", "Silme işlemi başarısız oldu.", "error");
                        }
                    });
                } else {
                    swal.close();
                }
            });
        });

        $(document).ready(function () {
            // Tüm tablo dropdown menüleri başta kapalı olarak ayarla
            $('.table-dropdown-menu').hide();

            // Tablo dropdown butonuna tıklama olayını yönet
            $('.table-dropdown-toggle').click(function (e) {
                e.stopPropagation(); // Tıklama olayının diğer elementlere yayılmasını durdur
                var $dropdownMenu = $(this).siblings('.table-dropdown-menu');

                // Tıklanan menüyü aç veya kapat
                if ($dropdownMenu.is(':visible')) {
                    $dropdownMenu.hide();
                } else {
                    $('.table-dropdown-menu').hide(); // Diğer tüm menüleri kapat
                    var offset = $(this).offset();
                    var dropdownHeight = $dropdownMenu.outerHeight();
                    var windowHeight = $(window).height();
                    var spaceBelow = windowHeight - (offset.top + $(this).outerHeight());

                    if (spaceBelow < dropdownHeight) {
                        // Yeterli alan yoksa yukarı açılmasını sağla
                        $dropdownMenu.css({
                            top: offset.top - dropdownHeight,
                            left: offset.left
                        }).show();
                    } else {
                        // Yeterli alan varsa aşağı açılmasını sağla
                        $dropdownMenu.css({
                            top: offset.top + $(this).outerHeight(),
                            left: offset.left
                        }).show();
                    }
                }
            });

            // Sayfa dışına tıklanırsa tüm menüleri kapat
            $(document).click(function () {
                $('.table-dropdown-menu').hide();
            });
        });

        function openLeaveCreateModal() {
            $.ajax({
                url: '@Url.Action("Create")',
                type: 'GET',
                success: function (result) {
                    $('#leaveCreateModalContent').html(result);
                    $('#leaveCreateModal').css('display', 'flex');
                }
            });
        }

        function openLeaveUpdateModal(id) {
            $.ajax({
                url: '@Url.Action("Update")/' + id,
                type: 'GET',
                success: function (result) {
                    $('#leaveUpdateModalContent').html(result);
                    $('#leaveUpdateModal').css('display', 'flex');
                }
            });
        }

        function closeLeaveModal(modalId) {
            $('#' + modalId).css('display', 'none');
        }

        $(window).click(function (event) {
            if ($(event.target).hasClass('modal')) {
                $(event.target).fadeOut();
            }
        });
    </script>
}

