@model IEnumerable<WorkFlowHR.UI.Areas.Manager.Models.LeaveTypeVMs.LeaveTypeListVM>

@{
    ViewData["Title"] = "Leave Types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.3/js/bootstrap.min.js"></script>

<br />
<br />

<!-- Neo header -->
<div class="neo-page-header">
    <h1 class="neo-page-title">Leave Types</h1>
    <a href="javascript:void(0);" class="btn neo-btn-gradient btn-create" onclick="openCreateModal()">Add</a>
</div>

<!-- Kart içinde tablo -->
<div class="neo-card table-responsive">
    <table id="leaveTypesTable" class="table table-hover display nowrap neo-table" style="width:100%">
        <thead>
            <tr>
                <th>Type</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        <span class="description-tooltip" data-bs-toggle="tooltip" title="@item.Description">
                            @(item.Description.Length > 30 ? item.Description.Substring(0, 30) + "..." : item.Description)
                        </span>
                    </td>
                    <td>
                        <div class="dropdown table-dropdown">
                            <button class="btn btn-secondary dropdown-toggle table-dropdown-toggle" type="button" id="dropdownMenuButton@item.Id" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="caret"></span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right table-dropdown-menu" aria-labelledby="dropdownMenuButton@item.Id">
                                <a class="dropdown-item dropdown-item-update" href="javascript:void(0);" onclick="openUpdateModal('@item.Id')">Update</a>
                                <button class="dropdown-item dropdown-item-delete" data-id="@item.Id">Delete</button>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Create Modal (Bootstrap 5 markup) -->
<div id="createModal" class="modal fade" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content neo-modal">
            <div class="modal-header">
                <h4 class="modal-title" id="createModalLabel">Create Leave Type</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="createModalContent">
                <!-- Content loaded by AJAX -->
            </div>
        </div>
    </div>
</div>

<!-- Update Modal (Bootstrap 5 markup) -->
<div id="updateModal" class="modal fade" tabindex="-1" aria-labelledby="updateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content neo-modal">
            <div class="modal-header">
                <h4 class="modal-title" id="updateModalLabel">Update Leave Type</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="updateModalContent">
                <!-- Content loaded by AJAX -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // DataTable
            $('#leaveTypesTable').DataTable({
                paging: true,
                ordering: true,
                info: true,
                searching: true,
                language: {
                    lengthMenu: "Göster _MENU_ kayıt",
                    search: "Ara:",
                    paginate: {
                        next: "İleri",
                        previous: "Geri"
                    },
                    info: "_START_ - _END_ arası gösteriliyor (toplam _TOTAL_ kayıt)",
                    infoEmpty: "Tabloda veri yok",
                    emptyTable: "Tabloda veri yok"
                }
            });

            // Bootstrap 5 tooltip init
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (el) { return new bootstrap.Tooltip(el); });

            // Dropdown menüleri yönet
            $('.table-dropdown-menu').hide();
            $('.table-dropdown-toggle').click(function (e) {
                e.stopPropagation();
                var $menu = $(this).siblings('.table-dropdown-menu');

                if ($menu.is(':visible')) {
                    $menu.hide();
                } else {
                    $('.table-dropdown-menu').hide();
                    var offset = $(this).offset();
                    var dropdownHeight = $menu.outerHeight();
                    var windowHeight = $(window).height();
                    var spaceBelow = windowHeight - (offset.top + $(this).outerHeight());

                    if (spaceBelow < dropdownHeight) {
                        $menu.css({ top: offset.top - dropdownHeight, left: offset.left }).show();
                    } else {
                        $menu.css({ top: offset.top + $(this).outerHeight(), left: offset.left }).show();
                    }
                }
            });
            $(document).click(function () { $('.table-dropdown-menu').hide(); });
        });

        // Delete
        $('.dropdown-item-delete').click(function () {
            var id = $(this).data('id');
            swal({
                title: "Silme Onayı",
                text: "Bu kaydı silmek istediğinize emin misiniz?",
                icon: "warning",
                buttons: {
                    cancel: { text: "Hayır", visible: true, className: "btn btn-secondary", closeModal: true },
                    confirm: { text: "Evet", className: "btn btn-danger", closeModal: false }
                }
            }).then((isConfirm) => {
                if (isConfirm) {
                    $.ajax({
                        url: '@Url.Action("Delete", "LeaveType", new { area = "Manager" })',
                        type: 'POST',
                        data: { id: id },
                        success: function () {
                            swal({ title: "Silindi", text: "Kayıt başarıyla silindi.", icon: "success" })
                                .then(() => { location.reload(); });
                        },
                        error: function () {
                            swal("Hata", "Silme işlemi başarısız oldu.", "error");
                        }
                    });
                } else {
                    swal.close();
                }
            });
        });

        // Modals (Bootstrap 5 API)
        function openCreateModal() {
            $.ajax({
                url: '@Url.Action("Create")',
                type: 'GET',
                success: function (result) {
                    $('#createModalContent').html(result);
                    var m = new bootstrap.Modal(document.getElementById('createModal'));
                    m.show();
                }
            });
        }

        function openUpdateModal(id) {
            $.ajax({
                url: '@Url.Action("Update")/' + id,
                type: 'GET',
                success: function (result) {
                    $('#updateModalContent').html(result);
                    var m = new bootstrap.Modal(document.getElementById('updateModal'));
                    m.show();
                }
            });
        }

        function closeModal(modalId) {
            var el = document.getElementById(modalId);
            var inst = bootstrap.Modal.getInstance(el) || new bootstrap.Modal(el);
            inst.hide();
        }
    </script>
}

